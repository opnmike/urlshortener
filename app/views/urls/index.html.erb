<p id="notice"><%= notice %></p>

<h1>Urls</h1>

<table>
  <thead>
    <tr>
      <th>Original url</th>
      <th>Short url</th>
      <th></th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original_url %></td>
        <td><a href="/<%= url.short_url %>"><%= request.base_url %>/<%= url.short_url %></a></td>
        <td><a href="/url/<%= url.short_url %>">Details</a></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', index_path %>
