<p id="notice"><%= notice %></p>

<h1><%= @user.email %></h1>

<table>
  <thead>
    <tr>
      <th>Original url</th>
      <th>Short url</th>
      <th></th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original_url %></td>
        <td><a href="/<%= url.short_url %>"><%= request.base_url %>/<%= url.short_url %></a></td>
        <td><a href="/url/<%= url.short_url %>">Details</a></td>
        <td><% if url.user %><a href="users/<%= url.user.id %>"><%= url.user.email %></a><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Home', index_path %> |
<%= link_to 'See All URLs', urls_path %>
